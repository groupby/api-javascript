{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "build"
  },
  "filesGlob": [
    "src/**/*.ts",
    "typings/index.d.ts",
    "test/**/*.ts",
    "!node_modules/**/*.ts"
  ],
  "files": [
    "src/all.d.ts",
    "src/api-javascript.ts",
    "src/core/bridge.ts",
    "src/core/query.ts",
    "src/request-models.ts",
    "src/response-models.ts",
    "src/util.ts",
    "typings/index.d.ts",
    "test/bridge.ts",
    "test/fixtures.ts",
    "test/query.ts"
  ],
  "atom": {
    "rewriteTsconfig": true,
    "formatOnSave": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
